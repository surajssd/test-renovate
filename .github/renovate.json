{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "packageRules": [
        {
            "matchDatasources": [
                "docker"
            ],
            "matchPackageNames": [
                "vllm/vllm-openai"
            ]
        },
        {
            "matchDatasources": [
                "docker"
            ],
            "matchPackageNames": [
                "ubuntu"
            ],
            "enabled": false
        },
        {
            "matchDatasources": [
                "helm"
            ],
            "matchPackageNames": [
                "nvidia/gpu-operator"
            ],
            "registryAliases": {
                "https://helm.ngc.nvidia.com/nvidia": "https://helm.ngc.nvidia.com/nvidia"
            }
        }
    ],
    "regexManagers": [
        {
            "fileMatch": [
                "tests/setup-infra/deploy-aks.sh"
            ],
            "matchStrings": [
                ": \"\\${GPU_OPERATOR_VERSION:=(?<currentValue>.*?)}\""
            ],
            "datasourceTemplate": "helm",
            "depNameTemplate": "nvidia/gpu-operator",
            "versioningTemplate": "semver"
        }
    ]
}
